<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build]) do |f| %>
      <!-- <%= f.label :body, "Your comment:" %> -->
      <%= f.text_area :body, class: "form-control" %>
      <br>
      <%= f.label :body, "Your rating:" %>
      <div class="rating"></div>
      <br>
      <%= f.submit "Submit", class: "btn btn-default" %>
  <% end %>
<% end %>
