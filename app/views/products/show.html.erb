<p id="notice"><%= notice %></p>

<div class="product-container">
  <% cache @product do %>
    <p><%= image_tag("#{@product.image_url}", class: "img-responsive img-zoom", data_zoom_image: "#{@product.image_url}") %></p>
    <p class="product-name">
      <strong><%= @product.name %></strong>
    </p>
    <p>Average Rating: <div class="rated" id="average-rating" data-score="<%= @product.average_rating %>"></div> </p>
    <br>
    <p><%= @product.description %></p>
    <br>
    <div class="color-container">
      <strong>Color:</strong>
      <%= @product.colour %>
    </div>
    <br>
    <div class="price-container">
      <span class="glyphicon glyphicon-euro" aria-hidden="true"></span>
      <%= @product.price_in_cents %>
      <%= form_tag "/payments" do %>
           <%= hidden_field_tag(:product_id, @product.id) %>
           <%= render partial: "shared/stripe_checkout_button" %>
         <% end %>
    </div>
    <hr>
    <div class="alert alert-info" style="display:none" role="alert">A new comment was posted!</div>
    <!-- <%= @product.highest_rating_comment %> -->
    <%= render "products/new_comment" %>
    <%= render "products/comments" %>
  <% end %>
</div>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
